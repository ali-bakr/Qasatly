<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    android:padding="4dp"

    >

    <LinearLayout
        android:layout_margin="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
      >



        <LinearLayout
android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginRight="2dp"
            android:orientation="vertical"
            android:padding="5dp"
            >


            <me.itangqi.waveloadingview.WaveLoadingView

                android:id="@+id/item_wave_view"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592"
                app:wlv_wave_background_Color="@android:color/white"
                app:wlv_shapeType="circle"
                app:wlv_borderColor="@color/colorPrimaryDark"
                app:wlv_borderWidth="1.1dp"
                app:wlv_round_rectangle="true"
                app:wlv_triangle_direction="north"
                app:wlv_waveAmplitude="70"
                app:wlv_waveColor="@color/colorPrimaryDark"
                app:wlv_titleBottomSize="29sp"
                app:wlv_titleBottomColor="@android:color/darker_gray"
                app:wlv_titleBottomStrokeColor="@color/graydark"
                app:wlv_titleBottomStrokeWidth="0dp"
                app:wlv_titleTopSize="29sp"
                app:wlv_titleTopColor="@android:color/white"
                app:wlv_titleCenterSize="26sp"
                app:wlv_titleCenterColor="@android:color/darker_gray"
                />

            <Button
                android:id="@+id/item_call_btn"
                android:layout_marginTop="55dp"
                android:background="@drawable/ic_phone_black2_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />
            <Button
                android:id="@+id/item_sms_btn"
                android:layout_marginTop="-30dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/ic_textsms_black_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />





    </LinearLayout>



        <View

            android:id="@+id/rv_mov_shadow"
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
           android:background="@color/colorPrimaryDark"
            />



        <LinearLayout
            android:layout_gravity="right"
            android:padding="3dp"

android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:fontFamily="@font/amiri"
                android:text="اسم العميل: "
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/item_monthly_cash_tv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:fontFamily="@font/amiri"
                android:textStyle="bold"
                android:text="القسط الشهري  : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_last_paid_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"


                android:fontFamily="@font/amiri"
                android:paddingLeft="1dp"
                android:text="تاريخ اخر سداد :  "
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_total_cash_tv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:fontFamily="@font/amiri"
                android:textStyle="bold"
                android:text="المبلغ الكلي : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/item_cash_remainig_tv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/amiri"
                android:text="المبلغ المتبقي :  "
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />








        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/index_btn"
        android:layout_margin="5dp"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/button_back_shap4"

        android:text="1"
        android:textSize="7sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />

</androidx.cardview.widget.CardView>